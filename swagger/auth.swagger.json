{
    "paths": {
        "/auth/login": {
            "post": {
                "summary": "Authentification utilisateur",
                "description": "Envoie un email et un mot de passe pour authentifier un utilisateur et retourne un jeton JWT.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "userToken": {
                                            "type": "string",
                                            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Mauvaise requête (erreurs de validation)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "msg": {
                                                        "type": "string",
                                                        "example": "Email invalide"
                                                    },
                                                    "path": {
                                                        "type": "string",
                                                        "example": "email"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé (erreur d'authentification)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Email / Mot de passe incorrect."
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/signup": {
            "post": {
                "summary": "Inscription d'un utilisateur",
                "description": "Permet à un utilisateur de s'inscrire en fournissant son nom d'utilisateur, son email, son mot de passe, sa date de naissance et son numéro de téléphone.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "password1234"
                                    },
                                    "username": {
                                        "type": "string",
                                        "example": "JohnDoe"
                                    },
                                    "birthday": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2000-01-01"
                                    },
                                    "phone_number": {
                                        "type": "string",
                                        "example": "0123456789"
                                    },
                                    "lastname": {
                                        "type": "string",
                                        "example": "Doe"
                                    }
                                },
                                "required": [
                                    "email",
                                    "password",
                                    "username",
                                    "birthday",
                                    "phone_number",
                                    "lastname"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Utilisateur inscrit avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "results": {
                                            "type": "object",
                                            "example": {
                                                "insertId": 1
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erreur de validation des données d'inscription",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "errors": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "msg": {
                                                        "type": "string",
                                                        "example": "Email invalide"
                                                    },
                                                    "param": {
                                                        "type": "string",
                                                        "example": "email"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur interne du serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Une erreur est survenue lors de l'inscription"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/auth/signout": {
            "get": {
                "summary": "Déconnexion d'un utilisateur",
                "description": "Permet à un utilisateur de se déconnecter. Cette route supprime la session active de l'utilisateur.",
                "responses": {
                    "200": {
                        "description": "Utilisateur déconnecté avec succès",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "You are disconnected"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Erreur de déconnexion (par exemple, l'utilisateur n'est pas connecté)",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Erreur lors de la déconnexion"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erreur interne du serveur",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Une erreur est survenue lors de la déconnexion"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}